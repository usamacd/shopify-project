<section class="startups-sec page-sec">
    <header class="page-sec-header">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.discription != blank %}
        <p>{{ section.settings.discription }}</p>
        {% endif %}
    </header>
  <div class="container-fluid  mw-1200">
    <div class="row text-center align-items-center ">
        {% for block in section.blocks %}
        <div class="col-md-2 col-sm-6 my-3 col-6">
          {% if block.settings.galleryimage != blank %}
            {{ block.settings.galleryimage | img_url: "100x" | img_tag }}
          {% endif %}
        </div>
    {% endfor %}
    </div>
  </div>
  </section>
  
  {% schema %}
  {
    "name": "startups section",
    "max_blocks": 6,
    "settings": [
      {
          "type":"text",
          "id":"heading",
          "label":"Heading"
       },
       {
          "type":"textarea",
          "id":"discription",
          "label":"discription"
      }
    ],
  
    "blocks":[
      {
        "type": "gallery",
        "name": "Add gallery",
        "settings": [
          {
            "type":"image_picker",
            "id":"galleryimage",
            "label":"select image"
          }
        ]
      }
    
    ],
"presets": [
      {
        "name": "startups section"
      }
    ]
    }
  {% endschema %}