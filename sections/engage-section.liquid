<section class="page-sec engage-models-sec pt-0">
    <header class="page-sec-header">
        {% if section.settings.heading != blank %}
            <h2>{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.discription != blank %}
            <p>{{ section.settings.discription }}</p>
            {% endif %}
    </header>
    <div class="container-fluid mw-1200">
        <div class="row">
            {% for block in section.blocks %}
            <div class="col-md-6">
                <div class="em-card "style="background:{{ block.settings.custom_background_color }}">
                    {% if block.settings.icon_class %}
                    <i class="cd-icon {{ block.settings.icon_class }}"></i>
                {% endif %}
                    {% if block.settings.heading != blank %}
                        <h3>{{ block.settings.heading }}</h3>
                        {% endif %}
                        {% if block.settings.content != blank %}
                            {{ block.settings.content }}
                        {% endif %}
                    {% if block.settings.button_link != blank %}
                        <a href="{{ block.settings.button_link }}" class="btn btn-learn-more">{{ block.settings.button_text }}</a>
                        {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>



{% schema %}
{
  "name": "engage section",
  "max_blocks": 2,
  "settings": [
    {
      "type":"text",
      "id":"heading",
      "label":"Heading"
     },
     {
      "type":"textarea",
      "id":"discription",
      "label":"discription"
    }
  ],

  "blocks":[
    {
      "type": "block",
      "name": "Add card",
      "settings": [
           {
                "type": "color",
                "id": "custom_background_color",
                "label": "Background color",
                "default": "#ccc"
          },
          {
              "type":"text",
              "id":"icon_class",
              "label":"icon"
          },
          {
              "type":"text",
              "id":"heading",
              "label":"Heading"
          },
          {
              "type": "html",
              "id": "content",
              "label": "content"
          },
          {
              "type":"text",
              "id":"button_text",
              "label":"button text"
          },
          {
              "type":"url",
              "id":"button_link",
              "label":"Read More link"
          }
      ]
    }
  
  ]
}
{% endschema %}